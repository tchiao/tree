<!DOCTYPE html>
<html>
<head>
  <title>Treeline</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'fav.ico' %>
  <%= javascript_include_tag "/storyjs-embed.js" %>
</head>

<body>
  <div class="container">
  	<div class="header">
      <% if @home_page %>
        <%= link_to(entries_path) do %>
          <%= image_tag("full_logo.png", height: "30") %>
        <% end %>
      <% else %>
        <%= link_to(entries_path) do %>
          <%= image_tag("tree_logo.png", height: "45") %>
        <% end %>
      <% end %>

      <div class="pull-right">

        <% if @grey_bg %>
          <div class="grey-bg">
        <% end %>
        
        <% if current_user %>
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.email %>
                <span class="caret"></span>
              </a>

              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Edit Account", edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
                <div class="chat-bubble-arrow-border"></div>
                <div class="chat-bubble-arrow"></div>
              </ul>
            </li>
          </ul>

        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: 'login-link' %> or <%= link_to "Sign Up", new_user_registration_path, class: 'login-link' %>
        <% end %>
      </div></div>
  	</div>

    <div id="flash-container">
      <% if flash[:notice] %>
        <div class="alert alert-notice"><%= flash[:notice] unless notice.blank? %></div>
      <% elsif flash[:error] %>
        <div class="alert alert-error"><%= flash[:error] unless error.blank? %></div>
      <% elsif flash[:alert] %>
        <div class="alert alert-alert"><%= flash[:alert] unless alert.blank? %></div>
      <% end %>
    </div>

   
    </div>
    <div><%= yield %></div>
</body>


</html>
