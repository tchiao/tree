<!DOCTYPE html>
<html>
<head>
  <title>History Tree</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>

	<div class="header">
		<h1><%= link_to "History Tree", entries_path %></h1>
	</div>

  <div id="flash-container">
    <% if flash[:notice] %>
      <div class="alert alert-notice"><%= flash[:notice] %></div>
    <% elsif flash[:error] %>
      <div class="alert alert-error"><%= flash[:error] %></div>
    <% elsif flash[:alert] %>
      <div class="alert alert-alert"><%= flash[:alert] %></div>
    <% end %>
  </div>
  <br/>
	<%= render :partial => '/categories/sidebar' unless @disable_nav %>

	<div id="content"><%= yield %></div>
</body>


</html>
