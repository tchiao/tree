<div class="row">
  <h2 class="text-center">Sign Up</h2> 
  <div class="form-box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div><%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-field', placeholder: "Email address" %></div><br />

      <div><%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-field', autocomplete: "off", placeholder: "Password" %></div><br />

      <div><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, class: 'form-field', autocomplete: "off", placeholder: "Confirm password" %></div><br />

      <div><%= f.submit "Sign Up", class: 'button center-block' %></div>
    <% end %>
  </div>
  <div class="text-center">
    Already have an account?
    <%= link_to "Sign In", new_session_path(resource_name), class: 'login-link' %>
  </div>

</div>
