<div class="row">
  <h2 class="text-center">Sign in</h2>
  <div class="form-box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div><%= f.label :email %><br />
      <%= f.email_field :email, class: 'form-field', placeholder: 'Email address' %></div><br />

      <div><%= f.label :password %> <%= link_to "Forgot password?", new_password_path(resource_name), class: 'pull-right small login-link' %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-field', placeholder: 'Password' %></div><br />

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div><br />
      <% end -%>

      <div><%= f.submit "Sign In", class: 'button center-block' %></div>
    <% end %>
  </div>
  <div class="text-center">
    Need to create an account?
    <%= link_to "Sign Up", new_registration_path(resource_name), class: 'login-link' %>
  </div>

</div>
