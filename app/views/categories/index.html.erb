<div class="row">
  <h2>Categories</h2>

  <div class="categories">
		<% @categories.each do |category| %>
			<div>
				<%= link_to "#{category.name} (#{category.entries.size})", category_path(category) %> || 
				<%= link_to "delete", category_path(category), method: :delete, data: {confirm: "Are you sure?"} %>
			</div>
		<% end %>
  </div>
</div>

<div class="row"><%= link_to 'All entries', entries_path %></div>


